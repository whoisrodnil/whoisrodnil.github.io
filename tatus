[32m+[m			[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m	[32m// Cells.[m[41m[m
[32m+[m		[32m> * {[m[41m[m
[32m+[m			[32m@include vendor('flex-shrink', '1');[m[41m[m
[32m+[m			[32m@include vendor('flex-grow', '0');[m[41m[m
[32m+[m		[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m[32m/// Sets up flexgrid columns.[m[41m[m
[32m+[m[32m/// @param {integer} $columns Columns.[m[41m[m
[32m+[m[32m@mixin flexgrid-columns($columns) {[m[41m[m
[32m+[m[41m[m
[32m+[m	[32m> * {[m[41m[m
[32m+[m		[32m$cell-width: 100% / $columns;[m[41m[m
[32m+[m		[32mwidth: #{$cell-width};[m[41m[m
[32m+[m	[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m[32m/// Sets up flexgrid gutters.[m[41m[m
[32m+[m[32m/// @param {integer} $columns Columns.[m[41m[m
[32m+[m[32m/// @param {number} $gutters Gutters.[m[41m[m
[32m+[m[32m@mixin flexgrid-gutters($columns, $gutters) {[m[41m[m
[32m+[m[41m[m
[32m+[m	[32m// Apply padding.[m[41m[m
[32m+[m		[32m> * {[m[41m[m
[32m+[m			[32m$cell-width: 100% / $columns;[m[41m[m
[32m+[m[41m[m
[32m+[m			[32mpadding: ($gutters * 0.5);[m[41m[m
[32m+[m			[32mwidth: $cell-width;[m[41m[m
[32m+[m		[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m[32m/// Sets up flexgrid gutters (flush).[m[41m[m
[32m+[m[32m/// @param {integer} $columns Columns.[m[41m[m
[32m+[m[32m/// @param {number} $gutters Gutters.[m[41m[m
[32m+[m[32m@mixin flexgrid-gutters-flush($columns, $gutters) {[m[41m[m
[32m+[m[41m[m
[32m+[m	[32m// Apply padding.[m[41m[m
[32m+[m		[32m> * {[m[41m[m
[32m+[m			[32m$cell-width: 100% / $columns;[m[41m[m
[32m+[m			[32m$cell-width-pad: $gutters / $columns;[m[41m[m
[32m+[m[41m[m
[32m+[m			[32mpadding: ($gutters * 0.5);[m[41m[m
[32m+[m			[32mwidth: calc(#{$cell-width} + #{$cell-width-pad});[m[41m[m
[32m+[m		[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m	[32m// Clear top/bottom gutters.[m[41m[m
[32m+[m		[32m> :nth-child(-n + #{$columns}) {[m[41m[m
[32m+[m			[32mpadding-top: 0;[m[41m[m
[32m+[m		[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m		[32m> :nth-last-child(-n + #{$columns}) {[m[41m[m
[32m+[m			[32mpadding-bottom: 0;[m[41m[m
[32m+[m		[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m	[32m// Clear left/right gutters.[m[41m[m
[32m+[m		[32m> :nth-child(#{$columns}n + 1) {[m[41m[m
[32m+[m			[32mpadding-left: 0;[m[41m[m
[32m+[m		[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m		[32m> :nth-child(#{$columns}n) {[m[41m[m
[32m+[m			[32mpadding-right: 0;[m[41m[m
[32m+[m		[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m	[32m// Adjust widths of leftmost and rightmost cells.[m[41m[m
[32m+[m		[32m> :nth-child(#{$columns}n + 1),[m[41m[m
[32m+[m		[32m> :nth-child(#{$columns}n) {[m[41m[m
[32m+[m			[32m$cell-width: 100% / $columns;[m[41m[m
[32m+[m			[32m$cell-width-pad: ($gutters / $columns) - ($gutters / 2);[m[41m[m
[32m+[m[41m[m
[32m+[m			[32mwidth: calc(#{$cell-width} + #{$cell-width-pad});[m[41m[m
[32m+[m		[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m[32m/// Reset flexgrid gutters (flush only).[m[41m[m
[32m+[m[32m/// Used to override a previous set of flexgrid gutter classes.[m[41m[m
[32m+[m[32m/// @param {integer} $columns Columns.[m[41m[m
[32m+[m[32m/// @param {number} $gutters Gutters.[m[41m[m
[32m+[m[32m/// @param {integer} $prev-columns Previous columns.[m[41m[m
[32m+[m[32m@mixin flexgrid-gutters-flush-reset($columns, $gutters, $prev-columns) {[m[41m[m
[32m+[m[41m[m
[32m+[m	[32m// Apply padding.[m[41m[m
[32m+[m		[32m> * {[m[41m[m
[32m+[m			[32m$cell-width: 100% / $prev-columns;[m[41m[m
[32m+[m			[32m$cell-width-pad: $gutters / $prev-columns;[m[41m[m
[32m+[m[41m[m
[32m+[m			[32mpadding: ($gutters * 0.5);[m[41m[m
[32m+[m			[32mwidth: calc(#{$cell-width} + #{$cell-width-pad});[m[41m[m
[32m+[m		[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m	[32m// Clear top/bottom gutters.[m[41m[m
[32m+[m		[32m> :nth-child(-n + #{$prev-columns}) {[m[41m[m
[32m+[m			[32mpadding-top: ($gutters * 0.5);[m[41m[m
[32m+[m		[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m		[32m> :nth-last-child(-n + #{$prev-columns}) {[m[41m[m
[32m+[m			[32mpadding-bottom: ($gutters * 0.5);[m[41m[m
[32m+[m		[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m	[32m// Clear left/right gutters.[m[41m[m
[32m+[m		[32m> :nth-child(#{$prev-columns}n + 1) {[m[41m[m
[32m+[m			[32mpadding-left: ($gutters * 0.5);[m[41m[m
[32m+[m		[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m		[32m> :nth-child(#{$prev-columns}n) {[m[41m[m
[32m+[m			[32mpadding-right: ($gutters * 0.5);[m[41m[m
[32m+[m		[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m	[32m// Adjust widths of leftmost and rightmost cells.[m[41m[m
[32m+[m		[32m> :nth-child(#{$prev-columns}n + 1),[m[41m[m
[32m+[m		[32m> :nth-child(#{$prev-columns}n) {[m[41m[m
[32m+[m			[32m$cell-width: 100% / $columns;[m[41m[m
[32m+[m			[32m$cell-width-pad: $gutters / $columns;[m[41m[m
[32m+[m[41m[m
[32m+[m			[32mpadding: ($gutters * 0.5);[m[41m[m
[32m+[m			[32mwidth: calc(#{$cell-width} + #{$cell-width-pad});[m[41m[m
[32m+[m		[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m[32m/// Adds debug styles to current flexgrid element.[m[41m[m
[32m+[m[32m@mixin flexgrid-debug() {[m[41m[m
[32m+[m[41m[m
[32m+[m	[32mbox-shadow: 0 0 0 1px red;[m[41m[m
[32m+[m[41m[m
[32m+[m	[32m> * {[m[41m[m
[32m+[m		[32mbox-shadow: inset 0 0 0 1px blue;[m[41m[m
[32m+[m		[32mposition: relative;[m[41m[m
[32m+[m[41m[m
[32m+[m		[32m> * {[m[41m[m
[32m+[m			[32mposition: relative;[m[41m[m
[32m+[m			[32mbox-shadow: inset 0 0 0 1px green;[m[41m[m
[32m+[m		[32m}[m[41m[m
[32m+[m	[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m[32m/// Initializes the current element as a flexgrid.[m[41m[m
[32m+[m[32m/// @param {integer} $columns Columns (optional).[m[41m[m
[32m+[m[32m/// @param {number} $gutters Gutters (optional).[m[41m[m
[32m+[m[32m/// @param {bool} $flush If true, clears padding around the very edge of the grid.[m[41m[m
[32m+[m[32m@mixin flexgrid($settings: ()) {[m[41m[m
[32m+[m[41m[m
[32m+[m	[32m// Settings.[m[41m[m
[32m+[m[41m[m
[32m+[m		[32m// Debug.[m[41m[m
[32m+[m			[32m$debug: false;[m[41m[m
[32m+[m[41m[m
[32m+[m			[32m@if (map-has-key($settings, 'debug')) {[m[41m[m
[32m+[m				[32m$debug: map-get($settings, 'debug');[m[41m[m
[32m+[m			[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m		[32m// Vertical align.[m[41m[m
[32m+[m			[32m$vertical-align: null;[m[41m[m
[32m+[m[41m[m
[32m+[m			[32m@if (map-has-key($settings, 'vertical-align')) {[m[41m[m
[32m+[m				[32m$vertical-align: map-get($settings, 'vertical-align');[m[41m[m
[32m+[m			[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m		[32m// Horizontal align.[m[41m[m
[32m+[m			[32m$horizontal-align: null;[m[41m[m
[32m+[m[41m[m
[32m+[m			[32m@if (map-has-key($settings, 'horizontal-align')) {[m[41m[m
[32m+[m				[32m$horizontal-align: map-get($settings, 'horizontal-align');[m[41m[m
[32m+[m			[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m		[32m// Columns.[m[41m[m
[32m+[m			[32m$columns: null;[m[41m[m
[32m+[m[41m[m
[32m+[m			[32m@if (map-has-key($settings, 'columns')) {[m[41m[m
[32m+[m				[32m$columns: map-get($settings, 'columns');[m[41m[m
[32m+[m			[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m		[32m// Gutters.[m[41m[m
[32m+[m			[32m$gutters: 0;[m[41m[m
[32m+[m[41m[m
[32m+[m			[32m@if (map-has-key($settings, 'gutters')) {[m[41m[m
[32m+[m				[32m$gutters: map-get($settings, 'gutters');[m[41m[m
[32m+[m			[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m		[32m// Flush.[m[41m[m
[32m+[m			[32m$flush: true;[m[41m[m
[32m+[m[41m[m
[32m+[m			[32m@if (map-has-key($settings, 'flush')) {[m[41m[m
[32m+[m				[32m$flush: map-get($settings, 'flush');[m[41m[m
[32m+[m			[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m	[32m// Initialize base grid.[m[41m[m
[32m+[m		[32m@include flexgrid-base($vertical-align, $horizontal-align);[m[41m[m
[32m+[m[41m[m
[32m+[m	[32m// Debug?[m[41m[m
[32m+[m		[32m@if ($debug) {[m[41m[m
[32m+[m			[32m@include flexgrid-debug;[m[41m[m
[32m+[m		[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m	[32m// Columns specified?[m[41m[m
[32m+[m		[32m@if ($columns != null) {[m[41m[m
[32m+[m[41m[m
[32m+[m			[32m// Initialize columns.[m[41m[m
[32m+[m				[32m@include flexgrid-columns($columns);[m[41m[m
[32m+[m[41m[m
[32m+[m			[32m// Gutters specified?[m[41m[m
[32m+[m				[32m@if ($gutters > 0) {[m[41m[m
[32m+[m[41m[m
[32m+[m					[32m// Flush gutters?[m[41m[m
[32m+[m						[32m@if ($flush) {[m[41m[m
[32m+[m[41m[m
[32m+[m							[32m// Initialize gutters (flush).[m[41m[m
[32m+[m								[32m@include flexgrid-gutters-flush($columns, $gutters);[m[41m[m
[32m+[m[41m[m
[32m+[m						[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m					[32m// Otherwise ...[m[41m[m
[32m+[m						[32m@else {[m[41m[m
[32m+[m[41m[m
[32m+[m							[32m// Initialize gutters.[m[41m[m
[32m+[m								[32m@include flexgrid-gutters($columns, $gutters);[m[41m[m
[32m+[m[41m[m
[32m+[m						[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m				[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m		[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m[32m/// Resizes a previously-initialized grid.[m[41m[m
[32m+[m[32m/// @param {integer} $columns Columns.[m[41m[m
[32m+[m[32m/// @param {number} $gutters Gutters (optional).[m[41m[m
[32m+[m[32m/// @param {list} $reset A list of previously-initialized grid columns (only if $flush is true).[m[41m[m
[32m+[m[32m/// @param {bool} $flush If true, clears padding around the very edge of the grid.[m[41m[m
[32m+[m[32m@mixin flexgrid-resize($settings: ()) {[m[41m[m
[32m+[m[41m[m
[32m+[m	[32m// Settings.[m[41m[m
[32m+[m[41m[m
[32m+[m		[32m// Columns.[m[41m[m
[32m+[m			[32m$columns: 1;[m[41m[m
[32m+[m[41m[m
[32m+[m			[32m@if (map-has-key($settings, 'columns')) {[m[41m[m
[32m+[m				[32m$columns: map-get($settings, 'columns');[m[41m[m
[32m+[m			[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m		[32m// Gutters.[m[41m[m
[32m+[m			[32m$gutters: 0;[m[41m[m
[32m+[m[41m[m
[32m+[m			[32m@if (map-has-key($settings, 'gutters')) {[m[41m[m
[32m+[m				[32m$gutters: map-get($settings, 'gutters');[m[41m[m
[32m+[m			[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m		[32m// Previous columns.[m[41m[m
[32m+[m			[32m$prev-columns: false;[m[41m[m
[32m+[m[41m[m
[32m+[m			[32m@if (map-has-key($settings, 'prev-columns')) {[m[41m[m
[32m+[m				[32m$prev-columns: map-get($settings, 'prev-columns');[m[41m[m
[32m+[m			[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m		[32m// Flush.[m[41m[m
[32m+[m			[32m$flush: true;[m[41m[m
[32m+[m[41m[m
[32m+[m			[32m@if (map-has-key($settings, 'flush')) {[m[41m[m
[32m+[m				[32m$flush: map-get($settings, 'flush');[m[41m[m
[32m+[m			[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m	[32m// Resize columns.[m[41m[m
[32m+[m		[32m@include flexgrid-columns($columns);[m[41m[m
[32m+[m[41m[m
[32m+[m	[32m// Gutters specified?[m[41m[m
[32m+[m		[32m@if ($gutters > 0) {[m[41m[m
[32m+[m[41m[m
[32m+[m			[32m// Flush gutters?[m[41m[m
[32m+[m				[32m@if ($flush) {[m[41m[m
[32m+[m[41m[m
[32m+[m					[32m// Previous columns specified?[m[41m[m
[32m+[m						[32m@if ($prev-columns) {[m[41m[m
[32m+[m[41m[m
[32m+[m							[32m// Convert to list if it isn't one already.[m[41m[m
[32m+[m								[32m@if (type-of($prev-columns) != list) {[m[41m[m
[32m+[m									[32m$prev-columns: ($prev-columns);[m[41m[m
[32m+[m								[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m							[32m// Step through list of previous columns and reset them.[m[41m[m
[32m+[m								[32m@each $x in $prev-columns {[m[41m[m
[32m+[m									[32m@include flexgrid-gutters-flush-reset($columns, $gutters, $x);[m[41m[m
[32m+[m								[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m						[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m					[32m// Resize gutters (flush).[m[41m[m
[32m+[m						[32m@include flexgrid-gutters-flush($columns, $gutters);[m[41m[m
[32m+[m[41m[m
[32m+[m				[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m			[32m// Otherwise ...[m[41m[m
[32m+[m				[32m@else {[m[41m[m
[32m+[m[41m[m
[32m+[m					[32m// Resize gutters.[m[41m[m
[32m+[m						[32m@include flexgrid-gutters($columns, $gutters);[m[41m[m
[32m+[m[41m[m
[32m+[m				[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m		[32m}[m[41m[m
[32m+[m[41m[m
 }[m
