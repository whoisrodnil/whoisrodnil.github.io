[32m+[m[32m/// Initializes base flexgrid classes.[m[41m[m
[32m+[m[32m/// @param {string} $vertical-align Vertical alignment of cells.[m[41m[m
[32m+[m[32m/// @param {string} $horizontal-align Horizontal alignment of cells.[m[41m[m
[32m+[m[32m@mixin flexgrid-base($vertical-align: null, $horizontal-align: null) {[m[41m[m
[32m+[m[41m[m
[32m+[m	[32m// Grid.[m[41m[m
[32m+[m		[32m@include vendor('display', 'flex');[m[41m[m
[32m+[m		[32m@include vendor('flex-wrap', 'wrap');[m[41m[m
[32m+[m[41m[m
[32m+[m		[32m// Vertical alignment.[m[41m[m
[32m+[m			[32m@if ($vertical-align == top) {[m[41m[m
[32m+[m				[32m@include vendor('align-items', 'flex-start');[m[41m[m
[32m+[m			[32m}[m[41m[m
[32m+[m			[32m@else if ($vertical-align == bottom) {[m[41m[m
[32m+[m				[32m@include vendor('align-items', 'flex-end');[m[41m[m
[32m+[m			[32m}[m[41m[m
[32m+[m			[32m@else if ($vertical-align == center) {[m[41m[m
[32m+[m				[32m@include vendor('align-items', 'center');[m[41m[m
[32m+[m			[32m}[m[41m[m
[32m+[m			[32m@else {[m[41m[m
[32m+[m				[32m@include vendor('align-items', 'stretch');[m[41m[m
[32m+[m			[32m}[m[41m[m
[32m+[m[41m[m
[32m+[m		[32m// Horizontal alignment.[m[41m[m
[32m+[m			[32m@if ($horizontal-align != null) {[m[41m[m
